{
    "extends": [
        "tslint:all"
    ],
    "rules": {
        "member-access": false,
        "curly": false,
        "only-arrow-functions": false,
        "typedef": false,
        "strict-boolean-expressions": false,
        "no-unsafe-any": false,
        "no-void-expression": [
            true,
            "ignore-arrow-function-shorthand"
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "completed-docs": false,
        "no-inferred-empty-object-type": false,
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "interface-name": false
    }
}
